<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_template_only_form_view_inherit_part_number" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.part.number</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="priority" eval="8" />
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="default_code" string="Part Number" invisible="product_variant_count &gt; 1" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>